<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-xl-4 col-sm-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-9">
                <div class="d-flex align-items-center align-self-start">
                  <h3 class="mb-0"><%= req.user.tokens || 0 %> tokens</h3>
                </div>
              </div>
              <div class="col-3">
                <div class="icon icon-box-success">
                  <span class="mdi mdi-cash icon-item"></span>
                </div>
              </div>
            </div>
            <h6 class="text-muted font-weight-normal">Purchase tokens</h6>
            <a href="/pricing" class="btn btn-success">Buy Tokens</a>
          </div>
        </div>
      </div>
      <div class="col-xl-4 col-sm-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-9">
                <div class="d-flex align-items-center align-self-start">
                  <h3 class="mb-0"><%= credentialscount %></h3>
                </div>
              </div>
              <div class="col-3">
                <div class="icon icon-box-success">
                  <span class="mdi mdi-key icon-item"></span>
                </div>
              </div>
            </div>
            <h6 class="text-muted font-weight-normal">Logs</h6>
            <a href="/credentials" class="btn btn-secondary">See all</a>
          </div>
        </div>
      </div>
      <div class="col-xl-4 col-sm-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-9">
                <div class="d-flex align-items-center align-self-start">
                  <h3 class="mb-0"><%= linkscount %></h3>
                </div>
              </div>
              <div class="col-3">
                <div class="icon icon-box-success">
                  <span class="mdi mdi-link icon-item"></span>
                </div>
              </div>
            </div>
            <h6 class="text-muted font-weight-normal">Social Links</h6>
            <div>
              <a href="/links" class="btn btn-secondary">See all</a>
            </div>
          </div>
        </div>
      </div>
      <!-- <div class="col-xl-4 col-sm-4 grid-margin stretch-card">
