<div class="container" style="background-color: #000">
  <h1 class="text-white text-center mt-3" style="margin-top: 4em">Signup</h1>
  <form
    method="post"
    accept="."
    class="form mb-5"
    style="max-width: 500px; margin: 1em auto"
  >
    <%-include("./partials/messages")%>
    <div class="mb-3" style="display: block; margin-bottom: 1em">
      <label for="username" class="form-label text-white">username</label>
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        autocomplete="username"
        required
      />
    </div>
    <div class="mb-3" style="display: block; margin-bottom: 2em">
      <label for="telegramID" class="form-label text-white"
        >Telegram Bot Chat ID</label
      >
      <input
        type="number"
        class="form-control"
        id="telegramID"
        aria-describedby="telegramID"
        placeholder="paste telegram chat ID"
        name="telegramID"
        required
      />
      <div id="telegramID" class="form-text text-white">
        <p style="margin: 0.5em; color: yellow">
          Click
          <a target="_blank" href="https://t.me/KingPhisherSocial_bot"
            >this link</a
          >
          to get your Telegram ID.
        </p>
      </div>
    </div>
    <div class="mb-3" style="display: block; margin-bottom: 1em">
      <label for="password" class="form-label text-white">Password</label>
      <input
        type="password"
        name="password"
        class="form-control"
        id="password"
        required
      />
    </div>
    <div class="mb-3" style="display: block; margin-bottom: 2em">
      <label for="password" class="form-label text-white"
        >Confirm password</label
      >
      <input
        type="password"
        name="password2"
        class="form-control"
        id="password"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary" style="width: 100%">
      Signup
    </button>
    <div class="my-3" style="margin: 2em 0">
      <p class="text-white">
        Already own an account
        <a class="text-primary text-bold" href="/signin">signin</a>.
      </p>
    </div>
  </form>
</div>
