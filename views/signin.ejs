<div class="container" style="background-color: #000">
  <h1 class="text-white text-center mt-3" style="margin-top: 4em">Sign in</h1>
  <form
    method="post"
    accept="."
    class="form mb-5"
    style="max-width: 500px; margin: 1em auto"
  >
    <%-include("./partials/messages")%>
    <div class="mb-3" style="display: block; margin-bottom: 1em">
      <label for="username" class="form-label">username</label>
      <input type="text" class="form-control" id="username" name="username" />
    </div>
    <div class="mb-3" style="display: block; margin-bottom: 2em">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        name="password"
        class="form-control"
        id="password"
      />
    </div>
    <button type="submit" class="btn btn-primary" style="width: 100%">
      Login
    </button>
    <div class="my-3" style="margin: 2em 0">
      <p class="text-white">
        <a href="/reset-password">Reset Password</a>
      </p>
      <p class="text-white">
        Don't have an account
        <a class="text-primary text-bold" href="/signup">signup</a> for free.
      </p>
    </div>
  </form>
</div>
